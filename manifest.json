{
  "manifest_version": 2,
  "name": "Gamepad for Plex Web",
  "author": "Dan Chowdhury",
  "version": "1.3",
  "description": "Control Plex.tv from the comfort of your couch with this gamepad extension!",
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
            "128": "icon128.png" },
  "background": {
    "scripts": ["fullscreen.js"]
  },  
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["main.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": ["lib/jquery.min.js","lib/gamepad.min.js","plex_injection.js"],
  "permissions": ["activeTab"]

}